{
  "name": "community-bulletin-board",
  "version": "1.0.0",
  "description": "A full-stack community bulletin board application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && dotnet run",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run start",
    "install": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && dotnet restore",
    "clean": "cd frontend && rm -rf node_modules dist && cd ../backend && rm -rf bin obj",
    "lint": "cd frontend && npm run lint",
    "test": "cd frontend && npm run test"
  },
  "keywords": [
    "react",
    "typescript",
    "dotnet",
    "sqlite",
    "bulletin-board",
    "community"
  ],
  "author": "Iwan Korkis",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
